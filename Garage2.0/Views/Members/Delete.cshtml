@model Garage2._0.Models.ViewModels.MemberDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="heads">Delete member</h1>

<h3 class="heads">Are you sure you want to delete this member?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PerNr)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PerNr)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicles)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vehicles)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if(Model.ParkedVehicles == true) { 
            <a disabled  class="btn btn-secondary">Delete</a>
        }
        else
        {
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
         |
        <a asp-action="Index1" style="font-weight: bold" class="btn btn-success mt-2" >Back to List</a>
        @if(Model.ParkedVehicles == true) { 
            <div class="text-danger">Can't delete a member who owns parked vehicles</div>
        }
    </form>
</div>
