@using Garage2._0.Models.ViewModels
@model VehicleEditViewModel
@inject IVehicleTypeService service
@inject IMemberSelectService services
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
             <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
            <select class="form-control" asp-for="MemberId" asp-items="@await services.GetMembersAsync()">
                @if (Model is null)
                 {
                 <option selected="selected" value="">Choose ID</option>

                 }
              </select>       
              <span asp-validation-for="MemberId" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="RegNr" class="control-label"></label>
                <input asp-for="RegNr" class="form-control" />
                <span asp-validation-for="RegNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NrOfWheels" class="control-label"></label>
                <input asp-for="NrOfWheels" class="form-control" />
                <span asp-validation-for="NrOfWheels" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VehicleTypeEntityId" class="control-label"></label>
                @*<partial name="_VehicleTypeInput" for="VehicleTypeEntityId" />*@
                <select class="form-control" asp-for="VehicleTypeEntityId" asp-items="@await service.GetVehiclesType()">
                @if (Model is null)
                 {
                 <option selected="selected" value="">Choose a type</option>

                 }
              </select>
                <span asp-validation-for="VehicleTypeEntityId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
